{% extends 'RBUserBundle::index.html.twig' %}

{% block fos_user_content %}
{% include "FOSUserBundle:ChangePassword:changePassword_content.html.twig" %}
{% endblock fos_user_content %}

{% block sub %}
<!-- BEGIN FORGOT PASSWORD FORM -->
  <form method="post" action="index.html" class="forget-form" novalidate="novalidate">
    <div class="form-title">
      <span class="form-title">Forget Password ?</span>
      <span class="form-subtitle">Enter your e-mail to reset it.</span>
    </div>
    <div class="form-group">
      <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
    </div>
    <div class="form-actions">
      <button class="btn btn-default" id="back-btn" type="button">Back</button>
      <button class="btn btn-primary uppercase pull-right" type="submit">Submit</button>
    </div>
  </form>
  <!-- END FORGOT PASSWORD FORM -->{% endblock %}