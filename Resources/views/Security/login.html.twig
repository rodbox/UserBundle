{% extends app.request.isxmlhttprequest ? '::base.html.twig' : 'RBUserBundle::index.html.twig' %}
{% block title %}{% endblock %}
{% block search %} {% endblock %}
{% block body %}
    <section class="page">
        <!-- BEGIN ROW  -->
        <div class="row ">
    <div class="col-xs-12 col-lg-4 col-lg-offset-4 pad-bottom-content-3">
        {#   <h1 class="league ">{{'msg.login.title'|trans}}</h1> #}
        <blockquote class=" no-border alert alert-info m-v-c">{{"msg.havent_account" | trans}} <strong><br>
            <a href="{{path('fos_user_registration_register') }}" class="small-2 btn-modal" title="{{"route.fos_user_registration_register.title"|trans}}">{{"action.click_here"|trans}}</a></strong></blockquote>
            <form action="{{ path("fos_user_security_check") }}" id="user_login" method="post" class="form-line">
                <fieldset class="form-group">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {# <fieldset class="padv-content-6 bg-transparent"> #}
                        <div class="form-group input-group input-group-focus">
                            <span class="input-group-addon no-border" ><i class="fa fa-user"></i> </span>
                            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                            {# <label class="control-label visible-ie8 visible-ie9">{{"label.username"|trans}}</label> #}
                            <input type="text" name="_username" autofocus=true placeholder="{{"label.username"|trans}}" autocomplete="off" class="form-control placeholder-no-fix" value="{{ last_username }}" required="required">
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon  no-border" ><i class="fa fa-lock"></i> </span>
                            <input type="password" id="password" name="_password" required="required" placeholder="{{"label.password"|trans}}" autocomplete="off" class="form-control placeholder-no-fix"/>
                        </div>
                  <label class="c-input c-checkbox block">
                            <input type="checkbox" value="1" name="remember_me" id="remember_me">
                             <span class="c-indicator"></span>
                             {{'msg.remember' | trans }}
                        </label>
                    </fieldset>
                    <fieldset class="form-group">
                    {# </fieldset> #}
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade in">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <input type="submit" class="btn btn-primary " id="_submit" name="_submit" value="{{'action.connect'| trans }}" />
                    <a href="{{path('fos_user_change_password') }}" class="btn btn-default btn-modal">{{"msg.forget_pw" | trans}}</a></fieldset>
                </form>
            </div>
            <!-- END COL : col-md-6 col-lg-6  -->
        </div>
        <!-- END ROW  -->
        <div class="clearfix"></div>
    </section>
{% endblock body %}